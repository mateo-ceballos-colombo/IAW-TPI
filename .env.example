# Keycloak admin (dev only)
# KEYCLOAK_URL: URL para que el contenedor se conecte a Keycloak (usa el nombre del servicio en la red Docker)
KEYCLOAK_URL=http://keycloak:8080/realms/cowork
# KEYCLOAK_ISSUER: Issuer esperado en los tokens JWT (debe coincidir con el iss del token de Postman/Browser)
KEYCLOAK_ISSUER=http://localhost:8080/realms/cowork
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Mongo (root user for container)
MONGO_URL=mongodb://admin:admin@mongodb:27017/cowork?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin

# SMTP / Mailhog (dev)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM="Cowork <no-reply@cowork.local>"

# Elastic stack
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTIC_USERNAME=kibana_system
ELASTIC_PASSWORD=password
APM_SERVER_URL=http://apm-server:8200

# Application services URLs (internal)
API_RESERVAS_URL=http://api-reservas:3001
GRAPHQL_BFF_URL=http://graphql-bff:4000
WEBSOCKET_URL=ws://websocket-occupancy:4001

# Frontend URLs (external - accessed from browser)
REACT_APP_KEYCLOAK_URL=http://localhost:8080/realms/cowork
REACT_APP_GRAPHQL_URL=http://localhost:4000/graphql
REACT_APP_WS_URL=ws://localhost:4001
